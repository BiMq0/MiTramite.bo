@page "/configuracion"

<div class="dashboard-container">
    <aside class="sidebar shadow">
        <div class="sidebar-header text-center mb-4">
            <h3 class="fw-bold text-light">Funcionario</h3>
            <hr class="bg-light opacity-25">
        </div>

        <nav class="nav flex-column">
            <NavLink class="nav-link" href="/dashboardfuncionario">🏠 Inicio</NavLink>
            <NavLink class="nav-link" href="/tramites-pendientes">📄 Trámites Pendientes</NavLink>
            <NavLink class="nav-link" href="/reportes">📊 Reportes</NavLink>
