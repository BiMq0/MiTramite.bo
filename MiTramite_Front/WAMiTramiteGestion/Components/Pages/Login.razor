@page "/"

<style>
    html,
    body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #f5f7fb;
        /* fondo neutro */
        display: flex;
        flex-direction: column;
    }

    header,
    footer {
        width: 100%;
        text-align: center;
        padding: 1rem 0;
        background: none;
        /* quitar colores del header/footer */
    }

    header img,
    .login-logo {
        height: 50px;
    }

    main {
        flex: 1;
        /* ocupa todo el espacio disponible */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 1.5rem;
        padding: 2.5rem 2rem;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 400px;
        display: flex;
        flex-direction: column;
        align-items: center;
        animation: fadeIn 1s ease-in-out;
    }

    .login-title {
        text-align: center;
        font-weight: 700;
        color: #333;
        margin-bottom: 2rem;
        font-size: 1.5rem;
    }

    .form-group {
        width: 100%;
        margin-bottom: 1.5rem;
        display: flex;
        flex-direction: column;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #555;
    }

    .form-control {
        border-radius: 0.75rem;
        padding: 0.7rem 1rem;
        font-size: 0.95rem;
        border: 1px solid #ccc;
    }

    .btn-login {
        border-radius: 0.75rem;
        font-weight: 600;
        padding: 0.75rem;
        background-color: #0d6efd;
        /* azul neutro */
        border: none;
        width: 100%;
        transition: all 0.3s ease;
    }

    .btn-login:hover {
        background-color: #0b5ed7;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
    }

    .text-muted a {
        color: #0d6efd;
        text-decoration: none;
    }

    .text-muted a:hover {
        text-decoration: underline;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

    }
</style>

<main>
    <div class="login-card">
        <img src="https://www.gestora.bo/img/logos/logoslogan.png" alt="Logo Gestora" class="login-logo" />

        <h3 class="login-title">Iniciar Sesión</h3>

        <div class="form-group">
            <label class="form-label">Correo electrónico</label>
            <input class="form-control" type="email" placeholder="ejemplo@correo.com" />
        </div>

        <div class="form-group">
            <label class="form-label">Contraseña</label>
            <input class="form-control" type="password" placeholder="********" />
        </div>

        <div class="d-grid mt-2">
            <NavLink class="btn btn-login text-white" href="/dashboardfuncionario">
                Entrar
            </NavLink>
        </div>

        <p class="text-center text-muted mt-4">
            ¿No tienes cuenta?
            <a href="/register">Regístrate aquí</a>
        </p>
    </div>
</main>

<footer>
    <p style="color: #555;">© 2025 Gobierno Autónomo Municipal de La Paz</p>
</footer>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">