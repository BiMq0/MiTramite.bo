@page "/"

<style>
    body {
        background: linear-gradient(135deg, #007b3f, #007bff, #6610f2);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 1.5rem;
        padding: 2.5rem;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 420px;
        backdrop-filter: blur(8px);
        animation: fadeIn 1s ease-in-out;
    }

    .login-logo {
        display: block;
        margin: 0 auto 1.5rem auto;
        width: 140px;
    }

    .login-title {
        text-align: center;
        font-weight: 700;
        color: #0d6efd;
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 0.75rem;
        padding: 0.7rem 1rem;
        font-size: 0.95rem;
    }

    .btn-login {
        border-radius: 0.75rem;
        font-weight: 600;
        padding: 0.75rem;
        background: linear-gradient(90deg, #007bff, #6610f2);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-login:hover {
        background: linear-gradient(90deg, #6610f2, #007bff);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
    }

    .text-muted a {
        color: #6610f2;
        text-decoration: none;
    }

    .text-muted a:hover {
        text-decoration: underline;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

    }
</style>

<div class="login-card">
    <img src="https://www.gestora.bo/img/logos/logoslogan.png" alt="Logo Gestora" class="login-logo" />

    <h3 class="login-title">Iniciar Sesión</h3>

    <div class="mb-3">
        <label class="form-label fw-semibold">Correo electrónico</label>
        <div class="input-group">
            <span class="input-group-text bg-light"><i class="bi bi-envelope-fill text-primary"></i></span>
            <input class="form-control" type="email" placeholder="ejemplo@correo.com" />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Contraseña</label>
        <div class="input-group">
            <span class="input-group-text bg-light"><i class="bi bi-lock-fill text-primary"></i></span>
            <input class="form-control" type="password" placeholder="********" />
        </div>
    </div>

    <div class="d-grid mt-4">
        <NavLink class="btn btn-login text-white" href="/dashboardfuncionario">
            Entrar
        </NavLink>
    </div>

    <p class="text-center text-muted mt-4">
        ¿No tienes cuenta?
        <a href="/register">Regístrate aquí</a>
    </p>
</div>

<!-- Agrega íconos de Bootstrap (necesario para bi-envelope y bi-lock) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">