@inherits LayoutComponentBase

<!-- Navbar superior institucional -->
<header>
    <nav class="navbar navbar-expand-lg shadow-sm"
         style="background: linear-gradient(135deg, #1a365d, #2c5282, #3182ce);">
        <div class="container d-flex align-items-center justify-content-between">
            <!-- Logo y nombre -->
            <a class="navbar-brand d-flex align-items-center text-light" href="/">
                <div class="d-flex align-items-center">
                    <div class="me-3"
                         style="width: 40px; height: 40px; background: linear-gradient(135deg, #1a365d, #3182ce, #63b3ed);
                                border-radius: 8px; display: flex; align-items: center; justify-content: center;
                                color: white; font-weight: bold; font-size: 1.2rem;">
                        MT
                    </div>
                    <div>
                        <div style="font-size: 1.25rem; font-weight: 700; line-height: 1;">Mi Trámite Gestión</div>
                        <div style="font-size: 0.75rem; color: rgba(255,255,255,0.85); line-height: 1;">La Paz Digital</div>
                    </div>
                    <div>
                        <img src="https://www.gestora.bo/img/logos/logoslogan.png"
                             alt="Logo Gestora Nacional"
                             style="height: 30px; margin-left: 10px; background: white;
                                    border-radius: 6px; padding: 4px 6px;" />
                    </div>
                </div>
            </a>
        </div>
    </nav>
</header>

<!-- Contenido principal -->
<main style="background-color: #f5f7fb; min-height: 100vh;">
    <article class="container-fluid p-4">
        @Body
    </article>
</main>

<!-- Footer -->
<footer style="background: linear-gradient(135deg, #1a365d, #2c5282); color: white; padding: 2rem 0; margin-top: 2rem;">
    <div class="container">
        <div class="row align-items-start">
            <div class="col-md-6">
                <div class="d-flex align-items-center mb-3">
                    <div class="me-3"
                         style="width: 40px; height: 40px; background: linear-gradient(135deg, #1a365d, #3182ce, #63b3ed);
                                border-radius: 8px; display: flex; align-items: center; justify-content: center;
                                color: white; font-weight: bold; font-size: 1.2rem;">
                        MT
                    </div>
                    <div>
                        <div style="font-size: 1.1rem; font-weight: 600;">Mi Trámite Gestión La Paz</div>
                        <div style="font-size: 0.9rem; color: rgba(255,255,255,0.8);">
                            Gobierno Digital Transparente
                        </div>
                    </div>
                </div>
                <p style="color: rgba(255,255,255,0.9); font-size: 0.9rem;">
                    Plataforma oficial del Gobierno Autónomo Municipal de La Paz para la gestión digital de trámites ciudadanos.
                </p>
            </div>
            <div class="col-md-6 text-md-end">
                <h6 style="color: white; margin-bottom: 1rem;">Enlaces útiles</h6>
                <div class="d-flex flex-column" style="gap: 0.5rem;">
                    <a href="#" style="color: rgba(255,255,255,0.8); text-decoration: none; font-size: 0.9rem;">📞 Soporte técnico</a>
                    <a href="#" style="color: rgba(255,255,255,0.8); text-decoration: none; font-size: 0.9rem;">❓ Preguntas frecuentes</a>
                    <a href="#" style="color: rgba(255,255,255,0.8); text-decoration: none; font-size: 0.9rem;">📋 Guías de trámites</a>
                    <a href="#" style="color: rgba(255,255,255,0.8); text-decoration: none; font-size: 0.9rem;">📄 Manual interno</a>
                    <a href="#" style="color: rgba(255,255,255,0.8); text-decoration: none; font-size: 0.9rem;">🔔 Actualizaciones del sistema</a>
                    <a href="#" style="color: rgba(255,255,255,0.8); text-decoration: none; font-size: 0.9rem;">⚖️ Políticas y normativas</a>
                </div>
            </div>
        </div>
        <hr style="border-color: rgba(255,255,255,0.2); margin: 1.5rem 0;">
        <div class="text-center" style="color: rgba(255,255,255,0.7); font-size: 0.85rem;">
            © 2025 Gobierno Autónomo Municipal de La Paz. Todos los derechos reservados.
        </div>
    </div>
</footer>

<!-- Error Blazor -->
<div id="blazor-error-ui" data-nosnippet>
    Ocurrió un error inesperado.
    <a href="." class="reload">Recargar</a>
    <span class="dismiss">🗙</span>
</div>

<style>
    /* Ajustes del layout */
    .navbar {
        border-bottom: 3px solid rgba(255,255,255,0.2);
    }

    #blazor-error-ui {
        background: #e11d48;
        color: white;
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 0.75rem;
        display: none;
        z-index: 1000;
        text-align: center;
    }

        #blazor-error-ui a.reload {
            color: #fff;
            text-decoration: underline;
            margin-left: 0.5rem;
        }

        #blazor-error-ui .dismiss {
            cursor: pointer;
            margin-left: 1rem;
        }
</style>
