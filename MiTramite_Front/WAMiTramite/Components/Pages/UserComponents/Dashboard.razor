@rendermode InteractiveServer

<div class="container-fluid">
    <!-- Header de bienvenida -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card text-white" style="background: linear-gradient(135deg, #1a365d 0%, #2c5282 100%);">
                <div class="card-body py-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3 class="mb-1 text-white">
                                <i class="bi bi-house-door me-2"></i>
                                ¡Bienvenido!
                            </h3>
                            <p class="mb-0 text-white" style="opacity: 0.9;">
                                Gestiona todos tus trámites municipales de forma rápida y segura.
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="bg-white bg-opacity-25 rounded p-3">
                                <div class="text-white-50 small">Último acceso</div>
                                <div class="fw-semibold text-white">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones rápidas -->
    <div class="row mb-4">
        <div class="col-12">
            <h5 class="mb-3">
                <i class="bi bi-lightning me-2 text-primary"></i>
                Acciones Rápidas
            </h5>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center py-4">
                    <i class="bi bi-file-earmark-plus display-4 mb-3" style="color: #1a365d;"></i>
                    <h6 class="card-title" style="color: #1a365d;">Nuevo Trámite</h6>
                    <p class="card-text small text-muted">Inicia un nuevo trámite municipal</p>
                    <button class="btn btn-sm text-white" style="background: linear-gradient(135deg, #1a365d, #3182ce); border: none;"
                        @onclick="@(() => NavigateToPage("nuevo-tramite"))">Comenzar</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center py-4">
                    <i class="bi bi-search display-4 mb-3" style="color: #1a365d;"></i>
                    <h6 class="card-title" style="color: #1a365d;">Consultar Estado</h6>
                    <p class="card-text small text-muted">Verifica el estado de tus trámites</p>
                    <button class="btn btn-sm text-white" style="background: linear-gradient(135deg, #1a365d, #3182ce); border: none;"
                        @onclick="@(() => NavigateToPage("mis-tramites"))">Consultar</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center py-4">
                    <i class="bi bi-folder2-open display-4 mb-3" style="color: #1a365d;"></i>
                    <h6 class="card-title" style="color: #1a365d;">Mis Documentos</h6>
                    <p class="card-text small text-muted">Accede a tus documentos subidos</p>
                    <button class="btn btn-sm text-white" style="background: linear-gradient(135deg, #1a365d, #3182ce); border: none;" 
                        @onclick="@(() => NavigateToPage("mis-documentos"))">Ver Documentos</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Resumen de actividad -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-bar-chart me-2"></i>
                        Resumen de Trámites
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="border-end">
                                <div class="h4 text-primary mb-0">5</div>
                                <small class="text-muted">Total</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="border-end">
                                <div class="h4 text-warning mb-0">2</div>
                                <small class="text-muted">En Proceso</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="h4 text-success mb-0">3</div>
                            <small class="text-muted">Completados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-bell me-2"></i>
                        Notificaciones Recientes
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item border-0 px-0">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                                <div class="flex-grow-1">
                                    <div class="small fw-semibold">Trámite Completado</div>
                                    <div class="small text-muted">Tu solicitud ha sido procesada exitosamente</div>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-0">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-clock-fill text-warning me-2 mt-1"></i>
                                <div class="flex-grow-1">
                                    <div class="small fw-semibold">En Revisión</div>
                                    <div class="small text-muted">Tu trámite está siendo evaluado</div>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-0">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-info-circle-fill text-info me-2 mt-1"></i>
                                <div class="flex-grow-1">
                                    <div class="small fw-semibold">Documentos Pendientes</div>
                                    <div class="small text-muted">Se requieren documentos adicionales</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hover-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
    }

    .btn-gradient {
        background: linear-gradient(135deg, #1a365d, #3182ce);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-gradient:hover {
        background: linear-gradient(135deg, #0f2027, #1a365d);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(26, 54, 93, 0.4);
    }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .container-fluid {
            padding: 1rem;
        }
        
        .card-body {
            padding: 1.5rem !important;
        }
        
        .display-4 {
            font-size: 2rem !important;
        }
        
        .row.align-items-center .col-md-4 {
            margin-top: 1rem;
            text-align: center !important;
        }
    }

    @@media (max-width: 576px) {
        .card-body {
            padding: 1rem !important;
        }
        
        .col-md-4.text-end {
            text-align: center !important;
        }
        
        .bg-white.bg-opacity-25 {
            margin-top: 1rem;
        }
    }
</style>

@code {
    private void NavigateToPage(string page)
    {
        Navigation.NavigateTo($"/user/{page}");
    }

    [Inject]
    private NavigationManager Navigation { get; set; } = default!;
}