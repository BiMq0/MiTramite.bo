@page "/user"
@page "/user/{ActivePage?}"
@using WAMiTramite.Components.Pages.UserComponents
@rendermode InteractiveServer

<div class="d-flex vh-100 m-0 p-0">
    <!-- Sidebar -->
    <div class="sidebar text-white"
        style="width: 280px; min-height: 100vh; background: linear-gradient(135deg, #1a365d, #2c5282);">
        <div class="p-3">
            <!-- User Info -->
            <div class="d-flex align-items-center mb-4 pb-3 border-bottom border-light border-opacity-25">
                <div class="me-3">
                    <div class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 50px; height: 50px;">
                        <i class="bi bi-person-fill text-white fs-4"></i>
                    </div>
                </div>
                <div>
                    <div class="fw-semibold">Usuario Demo</div>
                    <small class="text-white-50">usuario@demo.com</small>
                </div>
            </div>

            <!-- Navigation Menu -->
            <nav class="nav flex-column">
                <button
                    class="nav-link text-white d-flex align-items-center py-3 px-3 border-0 bg-transparent @(GetActiveClass("dashboard"))"
                    @onclick="@(() => SetActivePage("dashboard"))">
                    <i class="bi bi-speedometer2 me-3 fs-5"></i>
                    <span>Dashboard</span>
                </button>

                <button
                    class="nav-link text-white d-flex align-items-center py-3 px-3 border-0 bg-transparent @(GetActiveClass("nuevo-tramite"))"
                    @onclick="@(() => SetActivePage("nuevo-tramite"))">
                    <i class="bi bi-file-earmark-plus me-3 fs-5"></i>
                    <span>Nuevo Trámite</span>
                </button>

                <button
                    class="nav-link text-white d-flex align-items-center py-3 px-3 border-0 bg-transparent @(GetActiveClass("mis-tramites"))"
                    @onclick="@(() => SetActivePage("mis-tramites"))">
                    <i class="bi bi-list-check me-3 fs-5"></i>
                    <span>Mis Trámites</span>
                </button>

                <button
                    class="nav-link text-white d-flex align-items-center py-3 px-3 border-0 bg-transparent @(GetActiveClass("mis-documentos"))"
                    @onclick="@(() => SetActivePage("mis-documentos"))">
                    <i class="bi bi-folder2-open me-3 fs-5"></i>
                    <span>Mis Documentos</span>
                </button>
            </nav>
        </div>

        <!-- Logout Button -->
        <div class="mt-auto p-3 border-top border-light border-opacity-25">
            <button class="btn btn-outline-light w-100" @onclick="HandleLogout">
                <i class="bi bi-box-arrow-right me-2"></i>
                Cerrar Sesión
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1 d-flex flex-column">
        <!-- Header -->
        <header class="bg-white border-bottom px-4 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0 text-primary">@GetPageTitle()</h4>
                    <small class="text-muted">@GetPageSubtitle()</small>
                </div>
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <small class="text-muted">Último acceso: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i>
                            Mi Cuenta
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Perfil</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Configuración</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#" @onclick="HandleLogout"><i
                                        class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="flex-grow-1 p-4 bg-light overflow-auto">
            @switch (activePage.ToLower())
            {
                case "dashboard":
                    <Dashboard />
                    break;
                case "nuevo-tramite":
                    <NuevoTramite />
                    break;
                case "mis-tramites":
                    <MisTramites />
                    break;
                case "mis-documentos":
                    <MisDocumentos />
                    break;
                default:
                    <Dashboard />
                    break;
            }
        </main>
    </div>
</div>

<style>
    .sidebar {
        transition: all 0.3s ease;
        position: relative;
    }

    .nav-link {
        border-radius: 0.5rem;
        margin-bottom: 0.25rem;
        transition: all 0.2s ease;
        position: relative;
    }

    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1) !important;
        transform: translateX(3px);
    }

    .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2) !important;
        font-weight: 600;
    }
</style>

@code {
    [Parameter] public string? ActivePage { get; set; }

    private string activePage = "dashboard";

    protected override void OnInitialized()
    {
        activePage = ActivePage ?? "dashboard";
    }

    private void SetActivePage(string page)
    {
        activePage = page;
        Navigation.NavigateTo($"/user/{page}");
    }

    private string GetActiveClass(string page)
    {
        return activePage.ToLower() == page.ToLower() ? "active" : "";
    }

    private string GetPageTitle()
    {
        return activePage.ToLower() switch
        {
            "dashboard" => "Panel de Control",
            "nuevo-tramite" => "Nuevo Trámite",
            "mis-tramites" => "Mis Trámites",
            "mis-documentos" => "Mis Documentos",
            _ => "Panel de Control"
        };
    }

    private string GetPageSubtitle()
    {
        return activePage.ToLower() switch
        {
            "dashboard" => "Resumen de tu actividad y accesos rápidos",
            "nuevo-tramite" => "Inicia un nuevo trámite municipal",
            "mis-tramites" => "Consulta el estado de tus trámites",
            "mis-documentos" => "Gestiona tus documentos subidos",
            _ => "Resumen de tu actividad y accesos rápidos"
        };
    }

    private void HandleLogout()
    {
        Navigation.NavigateTo("/");
    }

    [Inject]
    private NavigationManager Navigation { get; set; } = default!;
}